<Window x:Class="TNPASerch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNPASerch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Menu VerticalAlignment="Center" Padding="5">
                <MenuItem Header="Файл">
                    <MenuItem Header="Поиск"></MenuItem>
                    <MenuItem Header="Настройка"></MenuItem>
                    <Separator/>
                    <MenuItem Header="Закрыть"></MenuItem>
                </MenuItem>
                <MenuItem Header="Настрйка">
                    <MenuItem Header="Добавить тип ТНПА"></MenuItem>
                    <MenuItem Header="База данных"></MenuItem>
                </MenuItem>
            </Menu>
            <ComboBox MinWidth="150" Margin="5"></ComboBox>
            <TextBox MinWidth="150" Margin="5"></TextBox>
            <Button Margin="5" Padding="5 0">
                <Image Height="25" Source="/TNPASerch;component/Images/search_book_open_search_locate_6178.png"></Image>
            </Button>
        </StackPanel>

        <ListView Height="auto"></ListView>
    </StackPanel>
</Window>
