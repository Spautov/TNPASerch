<Window x:Class="TNPASerch.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNPASerch.ViewModel"
        mc:Ignorable="d"
        Title="Журнал учета ТНПА" Height="450" Width="900">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="CommandCloseBinding_Executed"></CommandBinding>
    </Window.CommandBindings>
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Menu IsMainMenu="True" >
                <MenuItem Header="Файл">
                    <MenuItem Header="Exit"
                              InputGestureText="Alt+F4"
                              Command="Close">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ExitToApp" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Инструменты">
                    <MenuItem Header="Поиск"
                              Command="{Binding SearchCommand}">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="FileFindOutline" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Создать ТНПА"
                              Command="{Binding ShowAddTNPAWindowCommand}">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="FileDocumentBoxPlusOutline" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Редактор типов ТНПА"
                              Command="{Binding ShowTNPATypeEditWindowCommand}">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="FileEditOutline" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <ToolBarTray>
                <ToolBar Style="{DynamicResource MaterialDesignToolBar}"
                         ClipToBounds="False">
                    <ComboBox MinWidth="150" 
                              Margin="5" 
                              Height="32"
                              ItemsSource="{Binding  TnpaTypes, Mode=TwoWay}"
                              SelectedItem="{Binding Path=SelectedTnpaType}"/>

                    <TextBox Height="32"
                             materialDesign:TransitionAssist.DisableTransitions="True" 
                             Text="{Binding NumberTnpa, Mode=TwoWay}"
                             MinWidth="150" 
                             Margin="5" />

                    <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                            Margin="5 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth4"
                            Command="{Binding SearchCommand}">
                        <materialDesign:PackIcon Kind="FileFindOutline" Height="24" Width="24" />
                    </Button>
                    <Button Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Margin="5 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth4"
                            Command="{Binding ShowAddTNPAWindowCommand}">
                        <materialDesign:PackIcon Kind="FileDocumentBoxPlusOutline" Height="24" Width="24" />
                    </Button>
                    <Button Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Margin="5 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth4"
                            Command="{Binding ShowEditTNPAWindowCommand}">
                        <materialDesign:PackIcon Kind="FileEditOutline" Height="24" Width="24" />
                    </Button>
                    <Button Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Margin="5 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth4"
                            Command="Close">
                        <materialDesign:PackIcon Kind="ExitToApp" Height="24" Width="24" />
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </StackPanel>

        <ListView ItemsSource="{Binding Tnpas}" 
                  SelectedItem="{Binding SelectedTnpa}"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="6*"></ColumnDefinition>
                                <ColumnDefinition Width="6*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Type}" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Margin="5"/>
                            <TextBlock Text="{Binding Number}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" Margin="5"/>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" Margin="5"/>
                            <TextBlock Text="{Binding PutIntoOperation}" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="5"/>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
