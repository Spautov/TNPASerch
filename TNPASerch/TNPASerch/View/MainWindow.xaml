<Window x:Class="TNPASerch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNPASerch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <StackPanel Orientation="Vertical">
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Поиск"></MenuItem>
                <MenuItem Header="Настройка"></MenuItem>
                <Separator/>
                <MenuItem Header="Закрыть"></MenuItem>
            </MenuItem>
            <MenuItem Header="Настрйка">
                <MenuItem Header="Добавить тип ТНПА"></MenuItem>
                <MenuItem Header="База данных"></MenuItem>
            </MenuItem>
            <MenuItem Header="Поиск"></MenuItem>
            <ComboBox MinWidth="150"></ComboBox>
            <TextBox MinWidth="150"></TextBox>
        </Menu>
        <ListView Height="auto"></ListView>
    </StackPanel>
</Window>
